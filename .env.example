# Example .env file for E-Commerce Backend

# Server Configuration
NODE_ENV=development
PORT=5500

# Database Configuration
# Replace with your MongoDB connection string
# For local MongoDB: mongodb://localhost:27017/ecommerce
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/ecommerce
MONGODB_URI=mongodb://localhost:27017/ecommerce

# JWT Configuration
# Generate a secure random string for JWT_SECRET
# You can use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d
JWT_COOKIE_EXPIRES_IN=7

# CORS Configuration
# Set to your frontend URL
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
# Window in milliseconds (default: 15 minutes)
RATE_LIMIT_WINDOW_MS=900000
# Max requests per window
RATE_LIMIT_MAX_REQUESTS=100

# Paystack Configuration
# Get your keys from: https://dashboard.paystack.com/#/settings/developer
# For testing, use test keys (sk_test_... and pk_test_...)
# For production, use live keys (sk_live_... and pk_live_...)
PAYSTACK_SECRET_KEY=sk_test_07e60e88e8c1b18be3cd9e94e6943e47da2fd1f6
PAYSTACK_PUBLIC_KEY=pk_test_2bfb74e70c9593f6ddffbff47d2dd6a1b03abd0c

# Paystack Webhook Secret
# Get this from: https://dashboard.paystack.com/#/settings/developer
# This is used to verify webhook signatures
PAYSTACK_WEBHOOK_SECRET=your_webhook_secret_here
